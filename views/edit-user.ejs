<%- include('layout') %>
<link rel="stylesheet" href="/stylesheets/edit-user.css">

<div class="edit-user">

    <h2>Edit user - <%- user.name %></h2>

    <form action="/edit/user/<%- user.id %>" method="POST" enctype="multipart/form-data">
        <div class="row">
            <div class="content">
                <div class="input-box">
                    <p>Name: </p>
                    <input type="text" name="name" value="<%- user.name %>" required>
                </div>

                <div class="input-box">
                    <p>Email: </p>
                    <input type="email" name="email" value="<%- user.email %>" required>
                </div>

                <div class="input-box">
                    <p>Phone: </p>
                    <input type="text" name="phone" value="<%- user.phone %>" required>
                </div>

                <div class="input-box">
                    <p>Image: </p>
                    <input type="file" name="image" accept="image/*">
                </div>
            </div>

            <img src="/images/<%- user.image %>" class="preview-image" alt="user image">
        </div>

        <input type="submit" value="Update user">
    </form>
    
</div>

<script src="/javascript/edit-user.js"></script>